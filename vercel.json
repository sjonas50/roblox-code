{
  "buildCommand": "npm run build",
  "outputDirectory": "roblox-lovable-ui/.next",
  "installCommand": "npm install && cd roblox-claude-codegen && npm install && cd ../roblox-lovable-ui && npm install",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/roblox-lovable-ui/$1"
    }
  ],
  "functions": {
    "roblox-lovable-ui/app/api/generate/route.ts": {
      "maxDuration": 30
    },
    "roblox-lovable-ui/app/api/generate-intelligent/route.ts": {
      "maxDuration": 30
    },
    "roblox-lovable-ui/app/api/generate-multi-agent/route.ts": {
      "maxDuration": 30
    },
    "roblox-lovable-ui/app/api/chat/route.ts": {
      "maxDuration": 30
    }
  }
}